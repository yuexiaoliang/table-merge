    "@table-merge/element-ui": "workspace:*",
    "@types/node": "^18.8.2",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "@vitest/coverage-c8": "^0.23.4",
